{
  "name": "rms-status-backend",
  "version": "2.0.2",
  "description": "Express backend of RMS Server status service",
  "main": "index.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -p .",
    "start:prod": "node -r ./tsconfig-paths-bootstrap.js dist/index",
    "start:dev": "nodemon --watch 'src' --ext 'ts' --exec 'pnpm prebuild && pnpm build && node -r ./tsconfig-paths-bootstrap.js dist/index'",
    "test": "NODE_ENV=test jest tests/*.test.js --passWithNoTests",
    "test:cov": "NODE_ENV=test jest tests/*.test.js --coverage --passWithNoTests"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.22.0",
    "dotenv": "^10.0.0",
    "fastify": "^3.22.1",
    "fastify-cors": "^6.0.2",
    "fastify-plugin": "^3.0.0",
    "fastify-swagger": "^4.12.5",
    "mysql2": "^2.3.2",
    "pg": "^8.7.1",
    "pino-pretty": "^7.1.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "typedi": "^0.10.0",
    "typeorm": "^0.2.38"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.2",
    "@types/supertest": "^2.0.11",
    "jest": "^27.2.5",
    "nodemon": "^2.0.13",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s",
      "!**/*.module.(t|j)s",
      "!**/main.(t|j)s",
      "!**/ormconfig.(t|j)s",
      "!**/*.strategy.(t|j)s",
      "!**/*.entity.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/$1"
    }
  }
}
